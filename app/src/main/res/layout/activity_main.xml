<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cinvestav.tesis.MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="top|left|bottom|right"
    android:baselineAligned="false">

    <FrameLayout
        android:id="@+id/fLayout1"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:background="#0f0"
        android:layout_gravity="top|left|right">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UP"
            android:id="@+id/up"
            android:layout_gravity="center_horizontal|top" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEFT"
            android:id="@+id/left"
            android:layout_gravity="left|center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RIGHT"
            android:id="@+id/right"
            android:layout_gravity="right|center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOWN"
            android:id="@+id/down"
            android:layout_gravity="center_horizontal|bottom" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fLayout2"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:background="#00f"
        android:layout_gravity="left|bottom|right">
    </FrameLayout>
</LinearLayout>
